{
"manifest_version": 2,
	"name": "Pepsi to bepis",
	"description": "This extension replaces a pages instances of the text 'pepsi' with 'bepis'",
	"version": "1.0",
	"content_scripts": [
	        {
	            "matches": [
	                "*://*/*"
	            ],
	            "js": [
	                "js/bepisitize.js"
	            ],
	            "run_at": "document_end"
	        }
	    ],
	"permissions": [
		"storage"
	],
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"browser_action": {
		"default_icon": {
			"19": "img/icon19.png",
			"38": "img/icon48.png"
		},
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
		"img/icon128.png"
	]
}
